<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CategoryActivity">

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slide"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_period="1000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/hoodiesCardView"
                android:layout_width="80dp"
                android:background="@color/white"
                android:layout_height="90dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="25dp"
                app:cardMaxElevation="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/categoryHoodies"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:src="@drawable/gggggg"
                    app:civ_border_color="#16B4F2"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/hoodiesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoodies"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/shirtCardView"
                android:layout_width="80dp"
                android:background="@color/white"
                android:layout_height="90dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="25dp"
                app:cardMaxElevation="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/categoryShirts"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:src="@drawable/ggggg"
                    app:civ_border_color="#16B4F2"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/shirtText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-shirt"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/capCardView"
                android:layout_width="80dp"
                android:background="@color/white"
                android:layout_height="90dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="25dp"
                app:cardMaxElevation="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/categoryCap"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:src="@drawable/gggg"
                    app:civ_border_color="#16B4F2"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/capText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cap"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/mugCardView"
                android:layout_width="80dp"
                android:background="@color/white"
                android:layout_height="90dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="25dp"
                app:cardMaxElevation="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/categoryMug"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:src="@drawable/ggg"
                    app:civ_border_color="#16B4F2"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/mugText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mug"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/giftCardView"
                android:layout_width="80dp"
                android:background="#16B4F2"
                android:layout_height="90dp"
                android:backgroundTint="#16B4F2"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="25dp"
                app:cardMaxElevation="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/categoryGift"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:src="@drawable/g"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/giftText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gift"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/coverCardView"
                android:layout_width="80dp"
                android:background="@color/white"
                android:layout_height="90dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="25dp"
                app:cardMaxElevation="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/categoryCover"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:src="@drawable/gg"
                    app:civ_border_color="#16B4F2"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/coverText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Cover"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>

