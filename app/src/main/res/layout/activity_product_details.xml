<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ProductDetailsActivity"
    android:id="@+id/containerId">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/details_toolBar"/>

    <ImageView
        android:id="@+id/details_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/abd"
        android:scaleType="centerCrop"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-10dp"
        app:cardBackgroundColor="#997BCD"
        app:cardCornerRadius="40dp"
        app:cardMaxElevation="20dp">


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_marginTop="-47dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40dp"
        >

        <TextView
            android:id="@+id/doubleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Double Eye Hoodie"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#363431"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/allProduct_priceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳700"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/allProduct_OldPriceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  ৳1000"
                android:textSize="13dp"
                android:layout_marginTop="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/categoryId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cap"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/teal_200"/>

            <TextView
                android:id="@+id/ratingTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.3(208)"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/desTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/typeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Type : Stylish Casual Long Sleeve Hoodies For Men."
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:textColor="#62676C"/>

            <TextView
                android:id="@+id/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colour : Black and Yellow."
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#62676C"/>

            <TextView
                android:id="@+id/stylishText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stylish Design High Quality Cotton Fabric."
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#62676C"/>

            <TextView
                android:id="@+id/cottonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100% cotton."
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#62676C"/>

            <TextView
                android:id="@+id/fabricText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fabrication: 200 + GSM."
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#62676C"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="Quantity :"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/PlusIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            app:srcCompat="@drawable/ic_baseline_add_box_24" />

                        <TextView
                            android:id="@+id/quan"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="10dp"
                            android:inputType="number"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            />

                        <ImageView
                            android:id="@+id/MinusIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            app:srcCompat="@drawable/ic_baseline_indeterminate_check_box_24" />

                    </LinearLayout>

                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buyButton"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="18dp"
                    android:text="Buy Now"
                    android:textColor="@color/purple_500"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:inputType="textCapWords"
                    android:background="@drawable/background"/>

                <Button
                    android:id="@+id/cartBtn"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:text="Add to cart"
                    android:textColor="@color/purple_500"
                    android:inputType="textCapWords"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:backgroundTint="@color/purple_500"
                    android:background="@drawable/background"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>